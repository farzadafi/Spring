FROM openjdk:17-jdk-slim
EXPOSE 8761
ARG JAR_FILE=target/naming-server-0.0.1-SNAPSHOT.jar
ADD ${JAR_FILE} app.jar
ENTRYPOINT ["java","-jar","/app.jar"]

ENV SPRING_CLOUD_CONFIG_IMPORT-CHECK_ENABLED=false
ENV SPRING_APPLICATION_NAME=naming-server
ENV SERVER_PORT=8761
ENV EUREKA_CLIENT_REGISTER-WITH-EUREKA=false
ENV EUREKA_CLIENT_FETCH-REGISTRY=false